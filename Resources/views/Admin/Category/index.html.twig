{% extends '@SymEdit/Admin/base.html.twig' %}

{% macro tree(node) %}
  {% if node.children|length > 0 %}
  <ul>
      {% for child in node.children %}
          <li>
              <a href="{{ path('admin_category_update', {id:child.id}) }}">
                  <i class="icon-tag icon-white"></i> {{ child.title }}
              </a>
              {{ _self.tree( child ) }}
          </li>
      {% endfor %}
  </ul>
  {% endif %}
{% endmacro %}

