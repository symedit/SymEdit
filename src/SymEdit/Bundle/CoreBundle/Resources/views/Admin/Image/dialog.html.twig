<i clas="close icon"></i>
<div class="header">
    <div class="ui menu tabular">
        <a class="item active" data-tab="select-image">
            Select Image
        </a>
        <a class="item" data-tab="upload-image">
            Upload Image
        </a>
    </div>
</div>

<div class="content">
    <div class="ui tab active">
        <form class="ui grid six columns" id="symedit-media-choose-tab">
            {% for image in images %}
                <label class="column">
                    <input type="radio" data-preview="{{ image | imagine_filter('square') }}" value="{{ image.id }}" name="symedit-media-choose" />

                    <img src="{{ image | imagine_filter('symedit_96x96') }}">
                </label>
            {% endfor %}
        </form>
    </div>
</div>

<div class="actions">
    <div class="ui negative deny button">
        Nope
    </div>
</div>

